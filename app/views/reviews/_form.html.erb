<div class="col-md-4 infoBox userBox">
  <p class="is-size-4 mb-3">レビュー画面</p>

  <div class="rating-box mt-3">
    <%= form_with model: review, url: client_reviews_path(client), local: true do |f| %>
      <div class="main-rating">
        <div class="ratings mb-3">
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
          <span class="fa fa-star-o" id="star"></span>
        </div>
        <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
      </div>
      <%= f.hidden_field :client_id, value: client.id %>
      <%= f.hidden_field :score, id: "rating-value" %>
      <%= f.submit "保存", class: "button mt-3" %>
      <%= link_to "戻る", client_path(client), class: "button light ml-3 mt-3" %>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'reviews/index' %>