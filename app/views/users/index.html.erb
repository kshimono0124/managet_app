<div class="container">
  <div class="indexBox">
    <ul class="users">
      <h1>すべてのユーザー</h1>
        <% @users.each do |user| %>
          <li>
            <%= link_to user.name, mypage_path(user) %>
            <% if !user.admin? %>
            <%= link_to 'delete', user, method: :delete,
                               data: { confirm: 'You sure?' } %>
            <% end %>
          </li>
        <% end %>
    </ul>
  </div>
</div>