<div class="container">
  <div class="row sessionBox">
    <div class="col-md-6 col-md-offset-3 margin-lr-auto">
      <h1>プロフィール編集</h1>
        <%= form_with model: @user, url: registration_path(resource_name), html: { method: :put }, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
          <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= f.label :characters_minimum %>)</em>
          <% end %>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          <%= f.label :current_password %> 
          <%= f.password_field :current_password, class: "form-control" %>
          <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
