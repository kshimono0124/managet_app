<div class="container">
  <div class="row sessionBox">
    <div class="col-md-6 col-md-offset-3 margin-lr-auto">
      <h1>パスワード再設定</h1>
        <%= form_with model: @user, url: password_path(resource_name), html: { method: :post }, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      <p>New user? <%= link_to 'Sign up now!', new_user_registration_path %></p>
    </div>
  </div>
</div>
